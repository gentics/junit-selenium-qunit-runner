	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<verbose>true</verbose>
					<fork>true</fork>
					<executable>${JAVA_1_7_HOME}/bin/javac</executable>
					<compilerVersion>7.0</compilerVersion>
					<source>7</source>
					<target>7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>maven.central</id>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<url>http://repo1.maven.org/maven2/</url>
		</repository>
	</repositories>

	<distributionManagement>
		<repository>
			<id>archiva.lan.releases</id>
			<name>Gentics Releases Repository</name>
			<url>http://archiva.office/repository/releases</url>
		</repository>
		<snapshotRepository>
			<id>archiva.lan.snapshots</id>
			<name>Gentics Snapshots Repository</name>
			<url>http://archiva.office/repository/snapshots</url>
		</snapshotRepository>
	</distributionManagement>
</project>
